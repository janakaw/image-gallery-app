<div class="col-sm-4 mb-xs-30 wow fadeInUp">
    <div class="team-item">

        <div class="team-item-image">

            <img src="{% block team-member-image %}{% endblock %}" alt="" />

            <div class="team-item-detail">

                <h4 class="font-alt normal">{% block team-member-salutation %}{% endblock %}</h4>

                <p>
                    {% block team-member-description %}{% endblock %}
                </p>

                <div class="team-social-links">
                    {% for team-social-link in team-social-links %}
                        {{ team-social-link }}
                    {% endfor %}
                </div>

            </div>
        </div>

        <div class="team-item-descr font-alt">

            <div class="team-item-name">
                {% block team-member-name %}{% endblock %}
            </div>

            <div class="team-item-role">
                {% block team-member-role %}{% endblock %}
            </div>

        </div>

    </div>
</div>